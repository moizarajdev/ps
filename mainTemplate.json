
{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": { "type": "string" },
      "vmNamePrefix": { "type": "string" },
      "numberOfVms": { "type": "int" },
      "scriptUri": { "type": "string" },
      "timestamp": {
        "type": "string",
        "defaultValue": "[formatDateTime(utcNow(),'yyyy-MM-ddTHH:mm:ssZ')]",
        "metadata": { "description": "Auto-updated UTC timestamp to force extension rerun." }
      },
  
      "adminUsername": { "type": "string" },
      "adminPassword": {
        "type": "securestring",
        "defaultValue": {
          "reference": {
            "keyVault": {
              "id": "[resourceId('Microsoft.KeyVault/vaults','kv-domainvault')]"
            },
            "secretName": "VMLocalAdminPassword",
            "secretVersion": "5124a22dd3944221bff6764dd715200f"
          }
        },
        "metadata": { "description": "Pulled from Key Vault at deployment time." }
      },
  
      "vnetName": { "type": "string" },
      "subnetName": { "type": "string" },
      "existingNsgName": { "type": "string" },
      "enableAcceleratedNetworking": { "type": "bool" },
      "publicIpPerVm": { "type": "bool" },
      "restrictRdpViaBastion": { "type": "bool" },
      "rdpAllowedCidrs": { "type": "array" },
  
      "osDiskType": { "type": "string" },
      "osDiskSizeGB": { "type": "int" },
  
      "addUserAssignedIdentity": { "type": "bool" },
      "userAssignedIdentityName": { "type": "string" },
      "keyVaultNameForRoleAssignment": { "type": "string" },
  
      "storageAccountName": { "type": "string" },
      "storageDataRoleDefinitionId": {
        "type": "string",
        "defaultValue": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions','2a2b9908-6ea1-4ae2-8e65-a410df84e7d1')]",
        "metadata": { "description": "Storage Blob Data Reader roleDefinitionId." }
      }
    },
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.Network/networkInterfaces",
        "apiVersion": "2021-02-01",
        "name": "[concat(parameters('vmNamePrefix'), '-', copyIndex(), '-nic')]",
        "location": "[parameters('location')]",
        "copy": { "name": "nicLoop", "count": "[parameters('numberOfVms')]" },
        "properties": {
          "enableAcceleratedNetworking": "[parameters('enableAcceleratedNetworking')]",
          "networkSecurityGroup": {
            "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('existingNsgName'))]"
          },
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "subnet": {
                  "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName'))]"
                },
                "privateIPAllocationMethod": "Dynamic",
                "publicIPAddress": "[if(parameters('publicIpPerVm'), resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('vmNamePrefix'), '-', copyIndex(), '-pip')), json('null'))]"
              }
            }
          ]
        }
      },
      {
        "condition": "[parameters('publicIpPerVm')]",
        "type": "Microsoft.Network/publicIPAddresses",
        "apiVersion": "2021-02-01",
        "name": "[concat(parameters('vmNamePrefix'), '-', copyIndex(), '-pip')]",
        "location": "[parameters('location')]",
        "copy": { "name": "pipLoop", "count": "[parameters('numberOfVms')]" },
        "properties": {
          "sku": { "name": "Basic" },
          "publicIPAllocationMethod": "Dynamic"
        }
      },
      {
        "type": "Microsoft.Compute/virtualMachines",
        "apiVersion": "2021-07-01",
        "name": "[concat(parameters('vmNamePrefix'), '-', copyIndex())]",
        "location": "[parameters('location')]",
        "identity": {
          "type": "[if(parameters('addUserAssignedIdentity'),'SystemAssigned, UserAssigned','SystemAssigned')]",
          "userAssignedIdentities": "[if(parameters('addUserAssignedIdentity'), json(concat('{\"', resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('userAssignedIdentityName')), '\":{}}')), json('{}'))]"
        },
        "dependsOn": [
          "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmNamePrefix'), '-', copyIndex(), '-nic'))]",
          "[if(parameters('publicIpPerVm'), resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('vmNamePrefix'), '-', copyIndex(), '-pip')), json('null'))]"
        ],
        "properties": {
          "hardwareProfile": { "vmSize": "Standard_D4s_v3" },
          "osProfile": {
            "computerName": "[concat(parameters('vmNamePrefix'), '-', copyIndex())]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "MicrosoftWindowsDesktop",
              "offer": "windows-10",
              "sku": "20h2-pro",
              "version": "latest"
            },
            "osDisk": {
              "createOption": "FromImage",
              "managedDisk": { "storageAccountType": "[parameters('osDiskType')]" },
              "diskSizeGB": "[parameters('osDiskSizeGB')]"
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmNamePrefix'), '-', copyIndex(), '-nic'))]"
              }
            ]
          }
        },
        "copy": { "name": "vmLoop", "count": "[parameters('numberOfVms')]" },
        "resources": [
          {
            "type": "extensions",
            "apiVersion": "2021-03-01",
            "name": "CustomScriptExtension",
            "properties": {
              "publisher": "Microsoft.Compute",
              "type": "CustomScriptExtension",
              "typeHandlerVersion": "1.10",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "fileUris": ["[parameters('scriptUri')]"],
                "timestamp": "[parameters('timestamp')]"
              },
              "protectedSettings": {
                "commandToExecute": "powershell -ExecutionPolicy Unrestricted -File script.ps1 -AcceptEula -Restart"
              }
            }
          }
        ]
      },
      {
        "type": "Microsoft.Authorization/roleAssignments",
        "apiVersion": "2020-04-01-preview",
        "name": "[guid(concat('ra-', parameters('vmNamePrefix'), '-', copyIndex(), '-storage'))]",
        "scope": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
        "properties": {
          "roleDefinitionId": "[parameters('storageDataRoleDefinitionId')]",
          "principalId": "[reference(resourceId('Microsoft.Compute/virtualMachines', concat(parameters('vmNamePrefix'), '-', copyIndex())), '2021-07-01', 'Full').identity.principalId]",
          "principalType": "ServicePrincipal"
        },
        "dependsOn": [
          "[resourceId('Microsoft.Compute/virtualMachines', concat(parameters('vmNamePrefix'), '-', copyIndex()))]"
        ],
        "copy": { "name": "raLoop", "count": "[parameters('numberOfVms')]" }
      }
    ],
    "outputs": {}
}