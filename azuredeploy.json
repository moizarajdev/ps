{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": { "type": "string" },
    "hostPoolName": { "type": "string" },
    "registrationInfoToken": { "type": "string" },
    "registrationInfoExpirationTime": { "type": "string" },
    "sessionHostNames": { "type": "array" },
    "vmSize": { "type": "string"},
    "adminUsername": { "type": "string" },
    "adminPassword": { "type": "secureString" },
    "imagePublisher": { "type": "string" },
    "imageOffer": { "type": "string" },
    "imageSku": { "type": "string" },
    "imageVersion": { "type": "string", "defaultValue": "latest" },
    "vnetResourceGroup": { "type": "string" },
    "vnetName": { "type": "string" },
    "subnetName": { "type": "string" },
    "nsgId": { "type": "string" },
    "domainToJoin": { "type": "string" },
    "ouPath": { "type": "string", "defaultValue": "" },
    "domainJoinUsername": { "type": "secureString" },
    "domainJoinPassword": { "type": "secureString" },
    "scriptUri": { "type": "string" },
    "osDiskType": { "type": "string", "defaultValue": "Standard_LRS" },
    "diskSizeGB": { "type": "int", "defaultValue": 128 }
  },
  "variables": {
    "subnetResourceId": "[resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName'))]",
    "hostPoolResourceId": "[resourceId('Microsoft.DesktopVirtualization/hostPools', parameters('hostPoolName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.DesktopVirtualization/hostPools",
      "apiVersion": "2024-11-01-preview",
      "name": "[parameters('hostPoolName')]",
      "location": "[parameters('location')]",
      "properties": {
        "registrationInfo": {
          "tokenOperation": "Update",
          "token": "[parameters('registrationInfoToken')]",
          "expirationTime": "[parameters('registrationInfoExpirationTime')]"
        }
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2024-05-01",
      "copy": {
        "name": "nicLoop",
        "count": "[length(parameters('sessionHostNames'))]"
      },
      "name": "[concat(parameters('sessionHostNames')[copyIndex()], '-nic')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('hostPoolResourceId')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetResourceId')]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[parameters('nsgId')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2024-11-01",
      "copy": {
        "name": "vmLoop",
        "count": "[length(parameters('sessionHostNames'))]"
      },
      "name": "[parameters('sessionHostNames')[copyIndex()]]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('sessionHostNames')[copyIndex()], '-nic'))]",
        "[variables('hostPoolResourceId')]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('imagePublisher')]",
            "offer": "[parameters('imageOffer')]",
            "sku": "[parameters('imageSku')]",
            "version": "[parameters('imageVersion')]"
          },
          "osDisk": {
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "[parameters('osDiskType')]"
            },
            "diskSizeGB": "[parameters('diskSizeGB')]"
          }
        },
        "osProfile": {
          "computerName": "[parameters('sessionHostNames')[copyIndex()]]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "enableAutomaticUpdates": true
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('sessionHostNames')[copyIndex()], '-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2024-11-01",
      "copy": {
        "name": "customScriptLoop",
        "count": "[length(parameters('sessionHostNames'))]"
      },
      "name": "[concat(parameters('sessionHostNames')[copyIndex()], '/CustomScript')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', parameters('sessionHostNames')[copyIndex()])]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.10",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[parameters('scriptUri')]"
          ]
        },
        "protectedSettings": {
          "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', last(split(parameters('scriptUri'), '/')))]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2024-11-01",
      "copy": {
        "name": "domainJoinLoop",
        "count": "[length(parameters('sessionHostNames'))]"
      },
      "name": "[concat(parameters('sessionHostNames')[copyIndex()], '/joindomain')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', parameters('sessionHostNames')[copyIndex()])]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainToJoin')]",
          "OUPath": "[parameters('ouPath')]",
          "User": "[parameters('domainJoinUsername')]",
          "Restart": "true"
        },
        "protectedSettings": {
          "Password": "[parameters('domainJoinPassword')]"
        }
      }
    },
    {
      "type": "Microsoft.DesktopVirtualization/hostPools/sessionHosts",
      "apiVersion": "2024-11-01-preview",
      "copy": {
        "name": "sessionHostLoop",
        "count": "[length(parameters('sessionHostNames'))]"
      },
      "name": "[concat(parameters('hostPoolName'), '/', parameters('sessionHostNames')[copyIndex()])]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', parameters('sessionHostNames')[copyIndex()])]"
      ]
    }
  ],
  "outputs": {
    "sessionHostNames": {
      "type": "array",
      "value": "[parameters('sessionHostNames')]"
    }
  }
}
